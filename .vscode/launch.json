  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/containerd-stargz-grpc/main.go",
      "args": [
        "-config",
        "/tmp/test.conf"
      ]
    },
    {
      "name": "Connect remote dlv (1)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 30200,
      "host": "172.18.0.2",
      "remotePath": "/go/src/github.com/containerd/stargz-snapshotter", // original build path
      "cwd": "${workspaceFolder}" // local path
    },
    {
      "name": "Connect remote dlv (2)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 30200,
      "host": "172.17.0.3",
      "remotePath": "/go/src/github.com/containerd/stargz-snapshotter",
      "cwd": "${workspaceFolder}/stargz/snapshotter"
    }
  ]
}
